{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "http-scope",
  "description": "HTTP request permissions",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "http://localhost:*/**"
        },
        {
          "url": "http://127.0.0.1:*/**"
        }
      ],
      "deny": []
    }
  ]
}
