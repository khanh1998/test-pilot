{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "http-scope",
  "description": "HTTP request permissions",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**",
          "headers": ["*"],
          "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
        },
        {
          "url": "https://**",
          "headers": ["*"],
          "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
        },
        {
          "url": "http://localhost:*/**",
          "headers": ["*"],
          "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
        },
        {
          "url": "http://127.0.0.1:*/**",
          "headers": ["*"],
          "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
        },
        {
          "url": "https://test-pilot-five.vercel.app/**",
          "headers": ["*"],
          "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
        }
      ],
      "deny": []
    }
  ]
}
